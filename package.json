{
  "name": "react-native-native-worker",
  "version": "1.0.2",
  "description": "A React Native native module for running heavy processing tasks on background threads with concurrent task queue management",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "react-native": "lib/index.js",
  "source": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "clean": "rm -rf lib",
    "rebuild": "npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "react-native",
    "native-module",
    "background-thread",
    "worker",
    "android",
    "ios"
  ],
  "author": "Naveen Kumar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mlpai/react-native-native-worker.git"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.60.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-native": {
      "optional": false
    }
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "lib/",
    "src/",
    "android/",
    "ios/",
    "index.js",
    "index.d.ts",
    "*.podspec",
    "README.md"
  ],
  "codegenConfig": {
    "name": "RNNativeWorkerSpec",
    "type": "modules",
    "jsSrcsDir": "src"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/__tests__"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.ts"
    ]
  }
}
